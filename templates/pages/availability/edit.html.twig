{% extends "base.html.twig" %}

{% block title %}Modifier une disponibilité
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">Modification de la disponibilité</h1>

		<form name="availability" method="post">

			<div class="form-group">
				{{ form_label(form.startDateA) }}
				{{ form_widget(form.startDateA) }}
				<div class="form-error">
					{{ form_errors(form.startDateA) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.endDateA) }}
				{{ form_widget(form.endDateA) }}
				<div class="form-error">
					{{ form_errors(form.endDateA) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.dayPriceA) }}
				{{ form_widget(form.dayPriceA) }}
				<div class="form-error">
					{{ form_errors(form.dayPriceA) }}
				</div>
			</div>

			{{ form_row(form._token) }}

			<button type="submit" id="availability_submit" name="availability[submit]" class="btn btn-primary mt-4">Modifier</button>

		</form>
	</div>
{% endblock %}
