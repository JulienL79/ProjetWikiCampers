{% extends 'base.html.twig' %}

{% block title %}Gestion des disponibilités
{% endblock %}

{% block body %}
	<div class='container mt-4'>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}
	</div>
	<div class='container mt-4'>
		<h1>Gestion des disponibilités<h1>
				<hr class="my-4">

				<table class='table table-primary'>
					<thead>
						<th scope='col'>Immatriculation</th>
						<th scope='col'>Début</th>
						<th scope="col">Fin</th>
						<th scope="col">Prix/jr</th>
						<th scope="col">Modifier</th>
						<th scope="col">Supprimer</th>
					</thead>
					<tbody>
						{% for availability in availabilities %}
							<tr class='table-light'>
								<td scope='row'>{{availability.idVehicle.vehicleNumber}}</td>
								<td>{{availability.startDateA|date("d/m/Y")}}</td>
								<td>{{availability.endDateA|date("d/m/Y")}}</td>
								<td>{{availability.dayPriceA}}</td>
								<td>
									<a href="{{ path('app_availability.edit', { id: availability.idA }) }}" class="btn btn-warning">Modifier</a>
								</td>
								<td>
									<a href="{{ path('app_availability.delete', { id: availability.idA }) }}" class="btn btn-secondary">Supprimer</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<div class="navigation d-flex justify-content-center">
					{{ knp_pagination_render(availabilities) }}
				</div>
			</div>
		{% endblock %}
