{% extends "base.html.twig" %}

{% block title %}Rechercher un véhicule
{% endblock %}

{% block body %}

	<div class='container mt-4'>

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}
	</div>

	<div class="container">

		<h1 class="mt-4">Rechercher un véhicule</h1>

		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.searchStartDate) }}
			{{ form_widget(form.searchStartDate) }}
			<div class="form-error">
				{{ form_errors(form.searchStartDate) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.searchEndDate) }}
			{{ form_widget(form.searchEndDate) }}
			<div class="form-error">
				{{ form_errors(form.searchEndDate) }}
			</div>
		</div>

		<div class="form-group">
			{{ form_label(form.maxPrice) }}
			{{ form_widget(form.maxPrice) }}
			<div class="form-error">
				{{ form_errors(form.maxPrice) }}
			</div>
		</div>

		<div class='form-group'>
			{{ form_row (form.submit)}}
		</div>

		{{ form_end(form) }}
	</div>

{% endblock %}
